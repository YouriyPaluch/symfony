{% extends 'base.html.twig' %}
{% block stylesheets%}
    <style>
        .section {
            position: relative;
        }
        .advertising-left {
            float: left;
        }
        .advertising-right {
            position: absolute;
            top: 0;
            right: 0;
        }
        .advertising {
            width: 20%;
            background: #d6fff2;
            min-height: 500px;
        }
        .main {
            width: 60%;
            margin: auto;
            background: #d2e2ff;
            min-height: 500px;
        }
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .url-code-favicon {
            width: 30px;
            height: 30px;
            margin-bottom: -8px;
        }
        .url-code-url {
            line-height: 30px;
        }
    </style>
{% endblock %}


{% block title %} :: UrlCoder{% endblock %}

{% block body %}
    <section class="section">
        <div class="advertising advertising-left">
            {% block advertisingLeft %}{% endblock %}
        </div>
        <main class="main">
            <nav class="breadcrumb">{% block breadcrumb %}{% endblock %}</nav>
            <div class="content-container">{% block contentContainer %}{% endblock %}</div>
        </main>
        <div class="advertising advertising-right">
            {% block advertisingRight %}{% endblock %}
        </div>
    </section>
{% endblock %}